  <Robot name="velma" file="robots/velma_col.robot.xml">
   <kinbody name="head">
    <body name="head_link">
      <offsetfrom>torso_link2</offsetfrom>
      <translation>0.0 0.5 0</translation>
      <rotationaxis>0 1 0 0</rotationaxis>
      <Geom type="sphere">
        <radius>0.2</radius>
        <diffuseColor>1.0 0.5 0.0</diffuseColor>
        <ambientColor>0.6 0.6 0.6</ambientColor>
      </Geom>
    </body>

    <joint name="head_joint" type="hinge" enable="false">
      <body>torso_link2</body>
      <body>head_link</body>
      <limits>0 0</limits>
    </joint>
   </kinbody>

   <kinbody name="torso_front">
    <body name="torso_link1_front">
      <offsetfrom>torso_link1</offsetfrom>
      <translation>0.0 0.0 0</translation>
      <rotationaxis>0 1 0 0</rotationaxis>
      <Geom type="box">
        <extents>0.4 0.15 0.15</extents>
        <diffuseColor>1 0.5 0.0</diffuseColor>
        <ambientColor>0.6 0.6 0.6</ambientColor>
      </Geom>
    </body>

    <joint name="torso_link1_front_joint" type="hinge" enable="false">
      <body>torso_link1</body>
      <body>torso_link1_front</body>
      <limits>0 0</limits>
    </joint>
   </kinbody>
  </Robot>


